<h3 
    class="text-center mb-4"
    style="
        padding-bottom: 10px;
        color: rgb(153, 151, 151);
        border-bottom: 1px solid gray;
        width: 500px;
        margin:auto;
    "    
>{{viewTitle}}</h3>

<form action="/user" method="post" autocomplete="off" class="font-weight-normal"
style="color:rgb(196, 189, 189);"

>

    {{!-- hidden Id field --}}
    <input type="hidden" name="_id" value="{{user._id}}">

    {{!-- Name and Age --}}
    <div class="row">
        
        {{!-- Name --}}
        <div class="form-group col-md-8">
            <label for="name">Name</label>        
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{user.name}}" >
            <div class="text-danger">
                {{user.nameError}}
            </div>
        </div>
        
        {{!-- Age --}}
        <div class="form-group col-md-4">
            <label for="age">Age</label>        
            <input type="number" class="form-control" name="age" placeholder="Age"  value="{{user.age}}" >
            <div class="text-danger">
                {{user.ageError}}
            </div>
        </div>
    </div>

    {{!-- Eamil and Gender --}}
    <div class="row">
    
        {{!-- Email --}}
        <div class="form-group col-md-8">
            <label for="email">Email</label>        
            <input type="text" class="form-control" name="email" placeholder="example@site.com" value="{{user.email}}" >
            <div class="text-danger">
                {{user.emailError}}
            </div>
        </div>  

        {{!-- Gender --}}
        <div class="form-group col-md-4">
            <label for="gender">Gender</label>        
            <input type="text" class="form-control" name="gender" placeholder="Gender" value="{{user.gender}}" >
            <div class="text-danger">
                {{user.genderError}}
            </div>
        </div>

    </div>

    
    {{!-- Mobile and Dob --}}
    <div class="row">

        {{!-- Mobile --}}
        <div class="form-group col-md-6">
            <label for="mobile">Mobile</label>        
            <input type="number" class="form-control" name="mobile" placeholder="Contact Number" value="{{user.mobile}}" >
            <div class="text-danger">
                {{user.mobileError}}
            </div>
        </div>
        
        {{!-- Dob --}}
        <div class="form-group col-md-6">
            <label for="dob">Date of Birth</label>        
            {{!-- <input type="date" class="form-control" name="dob" placeholder="Date of Birth" value="{{user.dob}}" > --}}
            <input type="text" class="form-control" name="dob" placeholder="dd-mm-yyyy" onfocus="(this.type='date') "  value="{{user.dob}}" >
            <div class="text-danger">
                {{user.dobError}}
            </div>
        </div> 
    </div>


    <div class="row">
        
        {{!-- City --}}
        <div class="form-group col-md-4">
            <label for="city">City</label>        
            <input type="text" class="form-control" name="city" placeholder="City" value="{{user.city}}" >
            <div class="text-danger">
                {{user.cityError}}
            </div>
        </div>
        
        {{!-- State --}}
        <div class="form-group col-md-4">
            <label for="state">State</label>        
            <input type="text" class="form-control" name="state" placeholder="State" value="{{user.state}}" >
            <div class="text-danger">
                {{user.stateError}}
            </div>
        </div>
        
        {{!-- Country --}}
        <div class="form-group col-md-4">
            <label for="country">Country</label>        
            <input type="text" class="form-control" name="country" placeholder="Country" value="{{user.country}}" >
            <div class="text-danger">
                {{user.countryError}}
            </div>
        </div>
    </div>

    {{!-- Address --}}
    <div class="form-group ">
        <label for="address">Address</label>        
        <input type="text" class="form-control" name="address" placeholder="Apartment or suite" value="{{user.address}}" >
        <div class="text-danger">
                {{user.addressError}}
            </div>
    </div>  


    
    <div class="form-group my-5">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-database"></i>
             Submit
        </button>
        <a href="/user/list" class="btn btn-secondary  mx-3"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>