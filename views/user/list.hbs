<h3 
    class="text-center mb-3"
    style="
        padding-bottom: 10px;
        color: rgb(153, 151, 151);
        {{!-- border-bottom: 1px solid gray; --}}
        width: 500px;
        margin:auto;
    "     
>User Profile</h3>

<table 
    class="table table-dark table-striped table-hover"
    style="color: rgb(226, 226, 225);"    
>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Mobile</th>
            <th>Gender</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.age}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.gender}}</td>
            <td>{{this.city}}</td>
            <td>
                <div class="btn btn-dark">
                    <a href="/user/{{this._id}}" class="text-info mx-1">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i> 
                </a>
                <a 
                    href="/user/delete/{{this._id}}" 
                    onclick="return confirm('Are you sure you want to delete this record ?')"
                    class="text-danger mx-1"
                    >
                        <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                </a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h4 class="text-center my-4 p-3"><a href="/user" class="btn btn-dark text-light py-2 px-3 border border-dark">Add new Field <i class="fa fa-layer"></i></a></h4>